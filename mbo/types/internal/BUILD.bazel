cc_library(
    name = "traits_cc",
    hdrs = [
        "binary_search.h",
        "decompose_count.h",
        "is_braces_constructible.h",
    ],
    deps = ["cases_cc"],
)

cc_library(
    name = "test_types_cc",
    testonly = 1,
    hdrs = ["test_types.h"],
    deps = [
        "cases_cc",
        "@com_google_googletest//:gtest",
    ],
)
