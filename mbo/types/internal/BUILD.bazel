package(default_visibility = ["//mbo/types:__pkg__"])

cc_library(
    name = "cases_cc",
    hdrs = ["cases.h"],
)

cc_library(
    name = "extend_cc",
    hdrs = [
        "extend.h",
        "extender.h",
    ],
)

cc_library(
    name = "struct_names_cc",
    hdrs = ["struct_names_clang.h"],
    deps = [
        ":traits_cc",
        "@com_google_absl//absl/strings",
        "@com_google_absl//absl/types:span",
